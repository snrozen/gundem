<%- model_class = Message -%>
<% if @messages %>
	<% @messages.each do |msg| %> 

	<div class="page-header span9">
	<% if current_user.try(:admin) %>
	 	<h2><%= link_to msg.name, message_path(msg) %></h2>

	 <% else %>
   		<h2><%= msg.try(:name) %></h2>
    <% end %>
	    <div class="span2 pull-right">  
	      <%= msg.category.try(:name) %> 
	    </div>
	</div>
	<div class="span9 ">
	    <%= msg.try(:content) %>
	</div>
	<div class="span9 alt_cizgi">
	 Ekleyen Ki≈üi : <%=  msg.try(:user).try(:name)  %>

	<div class="span3 date pull-right">
	  Eklenme Tarihi : <%=  msg.try(:created_at).strftime("%d-%m-%Y / %H:%M") %>
	  </div>
</div>

	<% end %>
<% end %>





















