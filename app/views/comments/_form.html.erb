<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :message_id %>
    <%= f.input :user_id %>
    <%= f.input :like %>
    <%= f.input :dislike %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
